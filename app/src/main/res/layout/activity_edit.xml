<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <Button
        android:id="@+id/arrow_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_arrow_left"
        android:layout_marginTop="44dp"
        android:layout_marginStart="18dp"/>

    <TextView
        android:id="@+id/lang_tv"
        android:layout_width="272dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="@id/arrow_btn"
        app:layout_constraintStart_toEndOf="@id/arrow_btn"
        android:text="Редактирование"
        android:textSize="22sp"
        android:fontFamily="@font/bold"
        android:textColor="@color/Label_Primary"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="62dp"/>

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lang_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp">

        <RadioButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дарю"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Принимаю"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@+id/radio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Имя"
        android:textSize="14sp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Subhead"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:hint="Выбрать"
        android:background="@color/gray_spinner"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txtName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/category"
        android:textSize="14sp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Subhead"/>

    <TextView
        android:id="@+id/txt_category1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:hint="Выбрать"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gray_spinner"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_category1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/amount"
        android:textSize="14sp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Subhead"/>

    <TextView
        android:id="@+id/amountTxt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="0"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:textSize="16sp"
        android:gravity="fill_vertical"
        android:background="@color/gray_spinner"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="328dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Сохранить"
        android:background="@drawable/button_next"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="106dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/delete_txt"
        android:layout_width="154dp"
        android:layout_height="20dp"
        android:text="Удалить подарок"
        android:textSize="16sp"
        android:textStyle="normal"
        android:gravity="center"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/nextBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>