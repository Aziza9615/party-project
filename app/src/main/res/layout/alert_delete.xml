<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:theme="@style/Theme.AppCompat.Dialog.Alert">

    <TextView
        android:id="@+id/delete_name"
        android:layout_width="232dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Удалить Саламат байке?"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:textSize="20sp"
        android:textColor="@color/Label_Primary"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/enter"
        android:layout_width="232dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/delete_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Все данные связанные с этим контактом будут удалены"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:textSize="14sp"
        android:textColor="@color/delete"/>

    <Button
        android:id="@+id/btn_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/btn_yes"
        app:layout_constraintTop_toBottomOf="@+id/enter"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/gray_spinner"
        android:text="Отмена"
        android:textColor="@color/Label_Primary"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/gray_spinner"
        android:text="Удалить"
        android:textColor="@color/red"
        android:layout_marginBottom="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>