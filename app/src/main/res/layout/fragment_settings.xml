<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">

    <TextView
        android:id="@+id/still"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Ещё"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/Label_Primary"/>

   <ImageButton
        android:id="@+id/settings"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/still"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ic_gearshape"
        android:layout_marginTop="34dp"
        android:layout_marginStart="18dp"/>

    <TextView
        android:id="@+id/svs_txt"
        android:layout_width="256dp"
        android:layout_height="24dp"
        android:text="Настройки"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/Label_Primary"
        app:layout_constraintTop_toBottomOf="@+id/still"
        app:layout_constraintStart_toEndOf="@+id/settings"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="52dp"/>

    <ImageButton
        android:id="@+id/iv_svs"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="38dp"
        android:layout_marginStart="328dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_forward"
        app:layout_constraintTop_toBottomOf="@+id/still"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/gray_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/grey_10"
        app:layout_constraintTop_toBottomOf="@id/svs_txt" />

    <ImageButton
        android:id="@+id/share"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/gray_line"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ic_baseline_share_24"
        android:layout_marginTop="34dp"
        android:layout_marginStart="18dp"/>

    <TextView
        android:id="@+id/txt_share"
        android:layout_width="256dp"
        android:layout_height="24dp"
        android:text="Поделиться с друзьями"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/Label_Primary"
        app:layout_constraintTop_toBottomOf="@+id/gray_line"
        app:layout_constraintStart_toEndOf="@+id/share"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="52dp"/>

    <ImageButton
        android:id="@+id/iv_share"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="38dp"
        android:layout_marginStart="328dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_forward"
        app:layout_constraintTop_toBottomOf="@+id/gray_line"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/gray_line23"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/grey_10"
        app:layout_constraintTop_toBottomOf="@id/txt_share" />


    <ImageButton
        android:id="@+id/dev"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/gray_line23"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ic__"
        android:layout_marginTop="34dp"
        android:layout_marginStart="18dp"/>

    <TextView
        android:id="@+id/txt_dev"
        android:layout_width="256dp"
        android:layout_height="24dp"
        android:text="Написать разработчику"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/Label_Primary"
        app:layout_constraintTop_toBottomOf="@+id/gray_line23"
        app:layout_constraintStart_toEndOf="@+id/dev"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="52dp"/>

    <ImageButton
        android:id="@+id/iv_dev"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="38dp"
        android:layout_marginStart="328dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_forward"
        app:layout_constraintTop_toBottomOf="@+id/gray_line23"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/gray_line32"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@color/grey_10"
        app:layout_constraintTop_toBottomOf="@id/txt_dev" />

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>